# Dockerfile.dev for development environment
FROM rust:1.74-slim-bookworm

# Install build dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    libpq-dev \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /usr/src/app

# Install specific version of cargo-watch compatible with Rust 1.74
RUN cargo install cargo-watch --version=8.0.0

# Default command for development
CMD ["cargo", "watch", "-x", "run"]